@model AuthService.Models.SignUpViewModel
@{
    ViewData["Title"] = "Sign Up";
}

<section class="signup">
    <div class="container">

        @if (!string.IsNullOrEmpty(ViewData["StatusMessage"]?.ToString()))
        {
            <div class="alert alert-danger">
                @ViewData["StatusMessage"]
            </div>
        }

        
        <form method="post" action="/api/auth/signup" novalidate>
            @Html.AntiForgeryToken() 

            <h1>Create Account</h1>
            <p>Already have an account? <a asp-action="SignIn" asp-controller="Auth">Sign in here</a></p>

            <div class="form-content">
                <div id="form-firstname" class="input-group">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" id="FirstName" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div id="form-lastname" class="input-group">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" id="LastName" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div id="form-email" class="input-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" id="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div id="form-password" class="input-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" id="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div id="form-confirmpassword" class="input-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" id="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div id="form-checkbox" class="checkbox-group">
                    <div class="input-group">
                        <input asp-for="TermsAndConditions" id="TermsAndConditions" />
                        <label asp-for="TermsAndConditions"></label>
                    </div>
                    <span asp-validation-for="TermsAndConditions" class="text-danger"></span>
                </div>
                <div id="form-button">
                    <button type="submit" class="btn btn-theme"><i class="fa-regular fa-arrow-left-to-bracket"></i> Sign up</button>
                </div>
            </div>
        </form>

    </div>
</section>
